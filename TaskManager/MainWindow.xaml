<Window x:Class="TaskManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TaskManager"
        mc:Ignorable="d"
        
        Title="Тайм-менеджер" MinHeight="600" MinWidth="1000" WindowState="Maximized">

    <Window.Resources>
        <!-- Основные цвета -->
        <SolidColorBrush x:Key="PrimaryColor" Color="#FF6200EE"/>
        <SolidColorBrush x:Key="SecondaryColor" Color="#FF03DAC5"/>
        <SolidColorBrush x:Key="BackgroundColor" Color="#FFFFFFFF"/>
        <SolidColorBrush x:Key="TextColor" Color="#FF000000"/>

        <!-- Стиль для заголовков -->
        <Style x:Key="HeaderTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="22"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>

        <!-- Стиль для дней недели -->
        <Style x:Key="WeekdayTextStyle" TargetType="TextBlock">
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Foreground" Value="{StaticResource TextColor}"/>
        </Style>

        <!-- Стиль для ячеек расписания -->
        <Style x:Key="ScheduleCellStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="MinHeight" Value="80"/>
        </Style>

        <!-- Стиль для блока дедлайнов -->
        <Style x:Key="BorderSectionStyle" TargetType="Border">
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Padding" Value="15"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="8"/>
            <Setter Property="CornerRadius" Value="8"/>
        </Style>

        <Style x:Key="DeadlineItemStyle" TargetType="ListBoxItem">
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="MinHeight" Value="40"/>
            <!-- Минимальная высота -->
            <Setter Property="MaxHeight" Value="60"/>
            <!-- Максимальная высота -->
            <Setter Property="MaxWidth" Value="350"/>
            <!-- Максимальная ширина (если нужно) -->
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ListBoxItem">
                        <Grid>
                            <Border Background="{TemplateBinding Background}" 
                            BorderBrush="{TemplateBinding BorderBrush}" 
                            BorderThickness="{TemplateBinding BorderThickness}" 
                            CornerRadius="8"
                            Padding="10"
                            MinHeight="40"
                            MaxHeight="60">
                                <StackPanel Orientation="Horizontal">
                                    <TextBlock Text="{TemplateBinding Content}" 
                                       VerticalAlignment="Center"
                                       TextWrapping="Wrap"
                                       MaxWidth="280"/>
                                    <!-- Ограничиваем ширину текста -->
                                </StackPanel>
                            </Border>

                            <!-- Контейнер для кнопок -->
                            <StackPanel Orientation="Horizontal"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Center"
                                Margin="5"
                                Visibility="Collapsed"
                                x:Name="ActionButtons">
                                <Button Content="▲" Width="25" Height="25" Padding="0"/>
                                <Button Content="▼" Width="25" Height="25" Padding="0"/>
                            </StackPanel>
                        </Grid>

                        <!-- Триггер для показа кнопок при наведении -->
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ActionButtons" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Window.Background>
        <StaticResource ResourceKey="BackgroundColor"/>
    </Window.Background>

    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="3*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <!-- Верхняя панель -->
        <DockPanel Grid.Row="0" LastChildFill="True" Margin="10">
            <Border Width="80" Height="80" Background="{StaticResource SecondaryColor}" CornerRadius="40" Margin="5">
                <TextBlock Text="Лого" VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="{StaticResource TextColor}"/>
            </Border>
            <ProgressBar Name="WeeklyProgressBar" Value="30" Height="30" Width="300" Margin="20,10"
                         Foreground="{StaticResource PrimaryColor}"/>
        </DockPanel>

        <Border Grid.Row="1" Grid.Column="0" Margin="10" Style="{StaticResource BorderSectionStyle}">
            <!-- Основное расписание -->
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Заголовки дней недели -->
                <TextBlock Text="Пн" Grid.Column="0" Style="{StaticResource WeekdayTextStyle}"/>
                <TextBlock Text="Вт" Grid.Column="1" Style="{StaticResource WeekdayTextStyle}"/>
                <TextBlock Text="Ср" Grid.Column="2" Style="{StaticResource WeekdayTextStyle}"/>
                <TextBlock Text="Чт" Grid.Column="3" Style="{StaticResource WeekdayTextStyle}"/>
                <TextBlock Text="Пт" Grid.Column="4" Style="{StaticResource WeekdayTextStyle}"/>
                <TextBlock Text="Сб" Grid.Column="5" Style="{StaticResource WeekdayTextStyle}"/>
                <TextBlock Text="Вс" Grid.Column="6" Style="{StaticResource WeekdayTextStyle}"/>

                <!-- Ячейки расписания -->
                <Border Grid.Row="1" Grid.Column="0" Style="{StaticResource ScheduleCellStyle}"/>
                <Border Grid.Row="1" Grid.Column="1" Style="{StaticResource ScheduleCellStyle}"/>
                <Border Grid.Row="1" Grid.Column="2" Style="{StaticResource ScheduleCellStyle}"/>
                <Border Grid.Row="1" Grid.Column="3" Style="{StaticResource ScheduleCellStyle}"/>
                <Border Grid.Row="1" Grid.Column="4" Style="{StaticResource ScheduleCellStyle}"/>
                <Border Grid.Row="1" Grid.Column="5" Style="{StaticResource ScheduleCellStyle}"/>
                <Border Grid.Row="1" Grid.Column="6" Style="{StaticResource ScheduleCellStyle}"/>
            </Grid>
        </Border>

        <!-- Блок ближайших дедлайнов -->
        <Border Grid.Row="0" Grid.RowSpan="2" Grid.Column="1" Style="{StaticResource BorderSectionStyle}">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <!-- Заголовок -->
                    <RowDefinition Height="*"/>
                    <!-- Список дедлайнов -->
                </Grid.RowDefinitions>

                <!-- Заголовок с кнопкой сортировки -->
                <DockPanel Grid.Row="0">
                    <TextBlock Text="Ближайшие дедлайны" Style="{StaticResource HeaderTextStyle}" DockPanel.Dock="Left"/>
                    <Button Width="30" Height="30" Background="Transparent" BorderThickness="0"
                    ToolTip="Сортировать дедлайны">
                        <TextBlock FontFamily="Segoe MDL2 Assets" FontSize="18" Text="&#xE72C;"/>
                    </Button>
                </DockPanel>

                <!-- Прокручиваемая область -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto"
                      PanningMode="VerticalOnly" PreviewMouseWheel="ScrollViewer_PreviewMouseWheel">
                    <ListBox FontSize="18" BorderThickness="0" Background="Transparent">
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Проект - 20 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Отчёт - 22 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Презентация - 25 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Курс по C# - 30 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Доклад - 5 апреля</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Проект - 20 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Отчёт - 22 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Презентация - 25 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Курс по C# - 30 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Доклад - 5 апреля</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Проект - 20 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Отчёт - 22 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Презентация - 25 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Курс по C# - 30 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Доклад - 5 апреля</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Проект - 20 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Отчёт - 22 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Презентация - 25 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Курс по C# - 30 марта</ListBoxItem>
                        <ListBoxItem Style="{StaticResource DeadlineItemStyle}">Доклад - 5 апреля</ListBoxItem>
                    </ListBox>
                </ScrollViewer>
            </Grid>
        </Border>


    </Grid>
</Window>
